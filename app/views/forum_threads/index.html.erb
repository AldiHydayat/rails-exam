<div class="container mt-3  ">
    <div class="row">
        <div class="col-md-6 offset-md-3">
        <% if user_signed_in? %>
            <%= link_to "Buat Diskusi", new_forum_thread_path, class: 'btn btn-primary mb-3' %>
        <% end %>
            <% @threads.each do |thread| %>
                <div class="thread">
                    <h3> <%= link_to thread.title.titleize, forum_thread_path(thread) %> </h3>

                    <div class="meta">
                        <%= I18n.l(thread.created_at.to_date) %> oleh <%= thread.user.name %>
                    </div>

                    <div class="content">
                        <%= thread.content %>
                    </div>

                    <div class="count">
                        <%= thread.forum_posts.count %> Obrolan
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>